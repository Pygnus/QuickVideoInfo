<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="button_dark">#5a595b</color>

  <style name="SettingsTheme"
         parent="@android:style/Theme.Material.Settings">
    <item name="android:colorPrimary">#008394</item>
    <item name="android:colorPrimaryDark">#005f6b</item>
    <item name="android:colorAccent">#005f6b</item>

    <item name="android:windowBackground">@color/windowBackground</item>

    <item name="android:textColor">#CCdfdfdf</item>
    <item name="android:textAllCaps">false</item>

    <item name="android:windowIsTranslucent">false</item>

    <item name="android:colorBackground">@color/button_dark</item>
  </style>

  <style name="SettingsButton"
         parent="@android:style/Widget.Material.Button">
    <item name="android:backgroundTint">@color/button_dark</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">#CCdfdfdf</item>
    <item name="android:colorPrimary">#008394</item>
    <item name="android:colorPrimaryDark">#005f6b</item>
    <item name="android:colorAccent">#005f6b</item>
    <item name="android:colorBackground">@color/button_dark</item>
  </style>

  <style name="CustomTheme"
         parent="@style/SettingsTheme"/>
  </resources>