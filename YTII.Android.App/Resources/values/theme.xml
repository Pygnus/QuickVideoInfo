<?xml version="1.0" encoding="utf-8"?>
<resources>

  
  <color name="button_dark">#a4a2a6</color>
  <color name="theme_custom_background">#55000000</color>
  <color name="theme_devicedefault_background">#3cffffff</color>


  <style name="SettingsTheme" parent="@android:style/Theme.Holo">
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:textColor">#CCdfdfdf</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:popupBackground">@drawable/popup_background</item>
  </style>

  <style name="SettingsButton"
         parent="@android:style/Widget.Holo.Button">
    <item name="android:textAllCaps">false</item>
    <item name="android:popupBackground">@drawable/popup_background</item>
  </style>

  <style name="CustomTheme"
         parent="@style/TranslucentActivity"/>

  <style name="BaseTheme"
         parent="@android:style/Theme.Holo.Light.DarkActionBar" />

  <style name="BaseTheme.NoActionBar"
         parent="@style/Theme.AppCompat.NoActionBar" />
  
  <style name="BaseTheme.NoActionBar.FullScreen"
         parent="android:Theme.Holo.Light.NoActionBar.Fullscreen"/>
  
  <style name="MainTheme" parent="BaseTheme" />

  <style name="TranslucentActivity" parent="BaseTheme.NoActionBar">
    <item name="android:windowBackground">@color/theme_custom_background</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorBackground">@color/theme_custom_background</item>
  </style>
  <style name="TranslucentActivityLandscape" parent="TranslucentActivity">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <!--<item name="android:windowAnimationStyle">@anim/abc_popup_enter</item>-->
  </style>  
</resources>